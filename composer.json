{
	"name": "temis/database",
	"description": "The Temis database.",
	"keywords": ["database", "temis"],
	"license": ["MIT"],
	"authors": [
		{
			"name": "Semen Alekseev",
			"email": "semyon492@ya.ru",
			"homepage": "https://qd2.ru/"
		}
	],
	"require": {
		"php": "8.1 - 8.3",
		"ext-pdo": "*",
		"jetbrains/phpstorm-attributes": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "^10",
		"psalm/plugin-phpunit": "<1",
		"squizlabs/php_codesniffer": "^3",
		"vimeo/psalm": "^4 || ^5"
	},
	"autoload": {
		"psr-4": {
			"Temis\\Database\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Temis\\Database\\Tests\\": "tests"
		}
	},
	"minimum-stability": "dev",
	"scripts": {
		"phpstan": "phpstan analyse",
		"tester": "tester tests -s"
	}
}
